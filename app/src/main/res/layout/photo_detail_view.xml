<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/item_preview_photo"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_left"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_left"
            android:paddingStart="@dimen/padding_left"
            android:paddingTop="@dimen/padding_left"
            android:text="@string/app_name"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/item_selec_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_left"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_left"
            android:paddingStart="@dimen/padding_left"
            android:paddingTop="@dimen/padding_left"
            android:text="@string/app_name"
            android:textSize="12sp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/selec_if_multi"
        style="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_left"
        android:paddingStart="@dimen/padding_left"
        android:layout_gravity="center_vertical|end" />
</LinearLayout>